@page "/lesson_calendar"
<h1 style="text-align: center; font-size: 2.5rem; font-weight: bold; color: #333;">Lesson Calendar</h1>
<p style="text-align: center; font-size: 1.2rem; color: #666; margin-bottom: 20px;">View and manage your scheduled lessons.</p>

<div style="padding: 20px; display: flex; justify-content: center;">
    <div style="width: 80%; max-width: 800px; background: #ffffff; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); padding: 20px;">
        <h3 style="color: #007bff; margin-bottom: 20px;">Upcoming Lessons</h3>
        <ul>
            <li>Lesson on 20/03/2024 at 10:00 AM</li>
            <li>Lesson on 25/03/2024 at 2:00 PM</li>
        </ul>
        <button style="background-color: #007bff; color: white; border: none; border-radius: 5px; padding: 10px 20px; cursor: pointer;">
            Add New Lesson
        </button>
    </div>
</div>
