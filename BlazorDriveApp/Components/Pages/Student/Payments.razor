@page "/payments"
<h1 style="text-align: center; font-size: 2.5rem; font-weight: bold; color: #333;">Payment Tracking</h1>
<p style="text-align: center; font-size: 1.2rem; color: #666; margin-bottom: 20px;">View your payment history and balances.</p>

<div style="padding: 20px; display: flex; flex-direction: column; align-items: center;">
    <div style="background: #f9f9f9; padding: 20px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); width: 80%; max-width: 600px;">
        <h3 style="color: #007bff; margin-bottom: 10px;">Total Paid: $250</h3>
        <p style="margin-bottom: 10px;">Next Payment Due: 15/03/2024</p>
        <button style="background-color: #007bff; color: white; border: none; border-radius: 5px; padding: 10px 20px; cursor: pointer;">
            View Full Payment History
        </button>
    </div>
</div>
