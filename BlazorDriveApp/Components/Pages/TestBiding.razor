@page "/test-binding"


<h3>Test Binding</h3>

<EditForm Model="@studentModel" OnValidSubmit="HandleSubmit" FormName="bindingForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>First Name:</label>
        <InputText @bind-Value="studentModel.FirstName" />
    </div>

    <div>
        <label>Last Name:</label>
        <InputText @bind-Value="studentModel.LastName" />
    </div>

    <div>
        <label>Email:</label>
        <InputText @bind-Value="studentModel.Email" />
    </div>

    <button type="submit">Submit</button>
</EditForm>

@code {
    private Student studentModel = new Student();  // יצירת אובייקט המודל

    private void HandleSubmit()
    {
        // כאן תראה אם השדות מתעדכנים
        Console.WriteLine("Form Submitted!");
        Console.WriteLine($"First Name: {studentModel.FirstName}");
        Console.WriteLine($"Last Name: {studentModel.LastName}");
        Console.WriteLine($"Email: {studentModel.Email}");
    }

    public class Student
    {
        public string FirstName { get; set; } = string.Empty;
        public string LastName { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
    }
}
